<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping.dtd	">

<hibernate-mapping>

	<class name="model.Review" table="review">

		<id name="id" column="id" type="long">

			<generator class="increment" />

		</id>
				
		<property name="url" column="r_url" type="string" />
		
		<property name="gradeGraphic" column="grade_graphic" type="int" />
		
		<property name="gradeJogability" column="grade_jogability" type="int" />
		
		<property name="gradeFun" column="grade_fun" type="int" />
		
		<property name="gradeSound" column="grade_sound" type="int" />
		
		<many-to-one name="game" class="model.Game" column="id_game"/>
		
		<many-to-one name="platform" class="model.Platform" column="platform_id"/>
		
		<many-to-one name="gameType" class="model.GameType" column="gametype_id"/>

	</class>

</hibernate-mapping>



